@model IEnumerable<DutchTreat.Data.Entities.Product>
<h1>Shop</h1>
<p>Count: @Model.Count()</p>
<div class="container-fluid p-0">
    <div class="row d-flex justify-content-center">
        @foreach (var p in Model)
        {
            <div class="card-group p-3">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="~/img/@(p.ArtId).jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@p.Category - @p.Size</h5>
                        <ul class="product-props">
                            <li>Price: @p.Price</li>
                            <li>Artist: @p.Artist</li>
                            <li>Title: @p.Title</li>
                            <li>Description: @p.ArtDescription</li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-primary">Buy</a>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

